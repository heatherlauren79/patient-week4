    <script>
        // Save progress to localStorage
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            // Load saved state
            const saved = localStorage.getItem(checkbox.id);
            if (saved === 'true') {
                checkbox.checked = true;
            }
            
            // Save state on change
            checkbox.addEventListener('change', function() {
                localStorage.setItem(this.id, this.checked);
                
                // Check if day is complete
                checkDayCompletion();
            });
        });
        
        function checkDayCompletion() {
            document.querySelectorAll('.day-card').forEach(dayCard => {
                const checkboxes = dayCard.querySelectorAll('input[type="checkbox"]');
                const checkedBoxes = dayCard.querySelectorAll('input[type="checkbox"]:checked');
                
                // Don't count checkboxes that are part of exercises (like emotional triggers)
                const exerciseCheckboxes = dayCard.querySelectorAll('.emotional-trigger-table input[type="checkbox"], #alert-rush, #alert-schedule, #alert-scan, #alert-phone, #alert-yes, #alert-trapped, #alert-perfect');
                const mainCheckboxes = Array.from(checkboxes).filter(cb => !Array.from(exerciseCheckboxes).includes(cb));
                const mainChecked = Array.from(checkedBoxes).filter(cb => !Array.from(exerciseCheckboxes).includes(cb));
                
                if (mainCheckboxes.length > 0 && mainCheckboxes.length === mainChecked.length) {
                    dayCard.classList.add('completed-day');
                } else {
                    dayCard.classList.remove('completed-day');
                }
            });
        }
        
        // Check completion on load
        checkDayCompletion();
    </script>
